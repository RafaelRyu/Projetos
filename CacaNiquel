package exercise1;

import java.util.Scanner;
import java.util.Random;
public class ex1 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Random ran = new Random();
		
		int credito;
		int aposta;
		String jogar_novamente = "S";
		
		System.out.println("**********Jogo de CaÃ§a NÃ­quel***********");
		System.out.println("Insira seu crÃ©dito em Reais(R$) para jogar: ");
		credito = sc.nextInt();
		
		while (jogar_novamente.equals("S")) {
			
			while (credito <= 0 ) {
				System.out.println("Seu crÃ©dito nÃ£o pode ser um valor negativo, por favor insira um montante maior que zero: ");
				credito = sc.nextInt();			
				}
			
			System.out.println("Insira o valor de sua aposta: ");
		    aposta = sc.nextInt();
		    sc.nextLine();
		    while (aposta <= 0 || aposta>credito) {
		    	
		    	System.out.println("Valor invÃ¡lido, tente um valor maior que zero e dentro do seu limite de crÃ©dito: ");
		    	aposta = sc.nextInt();
		    	
			    sc.nextLine();
		    }
		    	credito -= aposta;
		    	System.out.println("Seu crÃ©dito restante Ã©: "+credito);
		    	
		    	String[] resultado = rodar(ran);
		    	mostrarResultado(resultado);
		    	int pagamento = Pagamento(resultado, aposta);
		    	
		    	if (pagamento>0) {
		    		System.out.println("Seu pagamento foi de R$"+pagamento );
		    		credito += pagamento;

		    		System.out.println("Seu credito Ã©: "+credito);
		    	} else {
		    		System.out.println("VocÃª perdeu essa partida :(");
		    		
		    	}
		        
		    	
		    	
		    
		    System.out.println("Deseja jogar novamente (S:Sim / N:NÃ£o) ?");
		    jogar_novamente = sc.nextLine().toUpperCase();
		    while (!jogar_novamente.equals("S") && !jogar_novamente.equals("N")) {
		    System.out.println("OpÃ§Ã£o invÃ¡lida, tente S para Sim ou N para NÃ£o");	
		    jogar_novamente = sc.nextLine().toUpperCase();
		    }
	    	
		}
		System.out.println("VocÃª saiu do jogo com R$"+credito+", volte sempre !");
	// fim do cÃ³digo principal
	}
	public static String[] rodar(Random ran) {
		String[] itens = {"ğŸ‰","ğŸŠ","ğŸ","ğŸ’","ğŸŒ¶ï¸","ğŸ„â€"};
		String[] resultado = new String[3];
		for (int i = 0; i < resultado.length; i++) {
		 resultado[i] = itens[ran.nextInt(6)];
		}
		return resultado;
		
	}
	
	public static void mostrarResultado(String[] resultado) {
		System.out.println("--------------");
		System.out.println(" " + String.join(" | ", resultado));
		System.out.println("--------------");
	}
	
	public static int Pagamento(String[] resultado, int aposta) {
		if (resultado[0].equals(resultado[1]) && resultado[1].equals(resultado[2])) {
			
			return switch (resultado[0]) {
			case "ğŸ‰"-> aposta*10;
			case "ğŸŠ"-> aposta*15;
			case "ğŸ" -> aposta*20;
			case "ğŸ’"-> aposta*25;
			case "ğŸŒ¶ï¸"-> aposta*30;
			case "ğŸ„â€"-> aposta*35;
			default -> 0;
			};
			
		} else if (resultado[0].equals(resultado[1]) || resultado[1].equals(resultado[2])) {
			return switch (resultado[1]) {
			case "ğŸ‰"-> aposta*2;
			case "ğŸŠ"-> aposta*3;
			case "ğŸ" -> aposta*4;
			case "ğŸ’"-> aposta*5;
			case "ğŸŒ¶ï¸"-> aposta*6;
			case "ğŸ„â€"-> aposta*9;
			default -> 0;
			};

		} else if (resultado[0].equals(resultado[2])) {
			return switch (resultado[0]) {
			case "ğŸ‰"-> aposta*2;
			case "ğŸŠ"-> aposta*3;
			case "ğŸ" -> aposta*4;
			case "ğŸ’"-> aposta*5;
			case "ğŸŒ¶ï¸"-> aposta*6;
			case "ğŸ„â€"-> aposta*9;
			default -> 0;
		};
					
	}
		return 0;
}
}
